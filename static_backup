from flask import Flask, render_template, request, redirect, url_for, session, flash

app = Flask(__name__)
app.secret_key = 'supersecret'  # Replace with a strong secret in production

# Dummy in-memory storage (replace with DB later)
users = []
jobs = []

@app.route('/')
def home():
    return render_template('job_listings.html', jobs=jobs)

@app.route('/register', methods=['GET', 'POST'])
def register():
    if request.method == 'POST':
        name = request.form['name']
        email = request.form['email']
        password = request.form['password']
        role = request.form['role']

        for user in users:
            if user['email'] == email:
                flash("Email already registered.")
                return redirect(url_for('register'))

        users.append({'name': name, 'email': email, 'password': password, 'role': role})
        flash("Registration successful.")
        return redirect(url_for('login'))
    return render_template('register.html')

@app.route('/login', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        email = request.form['email']
        password = request.form['password']

        for user in users:
            if user['email'] == email and user['password'] == password:
                session['user_id'] = email
                session['user_name'] = user['name']
                session['user_role'] = user['role']
                flash("Logged in successfully.")
                return redirect(url_for('dashboard'))

        flash("Invalid credentials.")
    return render_template('login.html')

@app.route('/logout')
def logout():
    session.clear()
    flash("You have been logged out.")
    return redirect(url_for('home'))

@app.route('/dashboard')
def dashboard():
    if 'user_id' not in session:
        flash("Please log in first.")
        return redirect(url_for('login'))
    return render_template('dashboard.html')

@app.route('/post_job', methods=['GET', 'POST'])
def post_job():
    if 'user_id' not in session or session.get('user_role') != 'employer':
        flash("Only employers can post jobs.")
        return redirect(url_for('login'))
    
    if request.method == 'POST':
        title = request.form['title']
        description = request.form['description']
        mission = request.form['mission']
        vision = request.form['vision']
        requirements = request.form['requirements']

        jobs.append({
            'title': title,
            'description': description,
            'mission': mission,
            'vision': vision,
            'requirements': requirements,
            'posted_by': session['user_name']
        })
        flash("Job posted successfully.")
        return redirect(url_for('home'))

    return render_template('post_job.html')

# More routes like apply, job_detail can be added next

if __name__ == '__main__':
    app.run(debug=True)
